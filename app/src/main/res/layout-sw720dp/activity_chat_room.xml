<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ListView
        android:id="@+id/lab4listview"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:divider="#000"
        android:dividerHeight="1dp"
        android:layout_alignParentTop="true"/>


    <Button
        android:id="@+id/lab4_send_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/lab4_chat_send"
        android:textSize="10dp"
        android:layout_below="@id/lab4listview"
        />

    <EditText
        android:id="@+id/lab4_message_input"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:hint="@string/lab4_chat_hint"
        android:layout_below="@id/lab4listview"
        android:layout_toRightOf="@id/lab4_send_button"
      />

    <Button
        android:id="@+id/lab4_receive_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/lab4_chat_receive"
        android:layout_below="@id/lab4listview"
        android:layout_toRightOf="@id/lab4_message_input"
        android:textSize="10dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lab7_frame_layout"
        android:layout_toRightOf="@id/lab4_receive_button">

    </FrameLayout>

</RelativeLayout>

